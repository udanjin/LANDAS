{
  "version": 2,
  "builds": [
    { "src": "backend/dist/server.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/dist/server.js" },
    { "src": "/(.*)", "dest": "client/dist/$1" }
  ]
}
